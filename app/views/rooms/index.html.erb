<div class="container-fluid">
  <div class="row">
    <div class="col-3">
      <p>Hello <%= current_user.username %></p>
      <%= render 'form', room: Room.new %>
      <hr>
      <% @rooms.each do |room| %>
        <%= link_to room do%>
        <div class="card mb-3">
          <div class="card-body">
            <%= room.name %>
          </div>
        </div>
        <% end %>
      <% end %>
      

</div>
    <div class="col-9">
      <% if @room.present? %>
        <div class="chat-room">
        <nav class="navbar navbar-light bg-light fixed-top">
          <span class="navbar-brand" href="#"><%= @room.name %></span>
        </nav>
          <% @room.messages.each do |message| %>
            <div class="message mb-3 <%= 'me' if message.user == current_user %>">
              <div class="content-container">
                <div class="content">
                  <%= message.content%>
                </div>
                <div class="author">
                  <%= message.user.username %>
                </div>
              </div>
            </div>
            <br>
          <% end %>
          <div class="chat-box">
            <%= render 'messages/form', message: Message.new, room: @room %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

